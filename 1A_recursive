#include<iostream>
using namespace std;

int mult(int x,int y)
{
	if(x==1)	
  {
    return y;
  }
	if(y==1)	
  { 
    return x;
  }
	if(x==0||y==0)	
  {
    return 0;
  }
	return x+mul(x,y-1);
}

int main()
{
	int x,y;
	cout<<"Enter x:";
	cin>>x;
	cout<<"Enter y:";
	cin>>y;
	int ans=mult(x,y);
	cout<<"Ans="<<ans<<endl;
	return 0;
}
